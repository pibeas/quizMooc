<form method="get" action="/quizes">
<p>Filtrar por texto y/o categoría</p>
	<input type="text" name="search" value="" />
	<select name="tema">
		<option value="" selected>Cualquier categoría</option>
		<option value="otro">Otro</option> <option value="humanidades" >Humanidades</option>
  		<option value="ocio" >Ocio</option>
  		<option value="ciencia" >Ciencia</option>
  		<option value="tecnologia" >Tecnología</option>
  	</select>
    <input type="submit" value="Enviar">
</form>

<table>
	<% var i; for (i = 0; i < quizes.length; i++) { %>
		 <tr>
		 	<td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
		 	<%if(session.user) { %>
			 	<td><a href="/quizes/<%= quizes[i].id %>/edit"><button type="button">Editar</button></a></td>
			 	<td>
	          		<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
	            		<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">borrar</button>
	          		</form>
	        	</td>
	        <% } %>
		 </tr>
	<% } %>
</table>
<%if(session.user) { %>
	<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
<% } %>